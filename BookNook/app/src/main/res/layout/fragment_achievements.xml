<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AchievementsFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/level_icon"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/star"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <!-- Dynamically updated level number -->
        <TextView
            android:id="@+id/level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 0"
            android:textColor="#FFA000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center" />

        <!-- XP and ProgressBar layout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- TextView to show current XP -->
            <TextView
                android:id="@+id/currentXpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <!-- Main XP ProgressBar -->
            <ProgressBar
                android:id="@+id/xpProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:progress="0"
                android:max="100" />

            <!-- TextView to show XP needed for the next level -->
            <TextView
                android:id="@+id/xpNeededTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/level_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x more books to lvl x"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />


        <!-- Achievements Title -->
        <TextView
            android:id="@+id/achievements_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:textSize="24sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <!-- Achievements Section -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Book Nooker Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Book Nooker"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Nooker -->
                    <ProgressBar
                        android:id="@+id/book_nooker_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="1"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/book_nooker_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Welcome to Book Nook!"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- First Chapter Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="126dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="First Chapter"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for First Chapter -->
                    <ProgressBar
                        android:id="@+id/first_chapter_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="1"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/first_chapter_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Finish 1 book"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Reading rookie Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Reading Rookie"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Day Dreamer -->
                    <ProgressBar
                        android:id="@+id/reading_rookie_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="5"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/reading_rookie_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Log 5 books as finished"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Story Seeker Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Story Seeker"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Thrill Seeker -->
                    <ProgressBar
                        android:id="@+id/story_seeker_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="10"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/story_seeker_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Log 10 books as finished"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Newbie Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- ProgressBar for Newbie -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Novel Navagator"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/Novel_navagator_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="50"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/Novel_navagator_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Log 50 books as finished"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book Destroyer Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Book Enthusiast"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Destroyer -->
                    <ProgressBar
                        android:id="@+id/book_Enthusiast_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/book_Enthusiast_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Log 100 books as finished"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Legendary Librarian Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Legendary Librarian"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Destroyer -->
                    <ProgressBar
                        android:id="@+id/legendary_librarian_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="500"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/legendary_librarian_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Read 500 books"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book god Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Book God"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Destroyer -->
                    <ProgressBar
                        android:id="@+id/book_destroyer_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="1000"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/book_destroyer_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Read 1000 books"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Fantasy Explorer Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Fantasy Explorer"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Fantasy Explorer -->
                    <ProgressBar
                        android:id="@+id/fantasy_explorer_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="10"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/fantasy_explorer_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Read 10 fantasy books"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sci-Fi Voyager Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sci-Fi Voyager"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Sci-Fi Voyager -->
                    <ProgressBar
                        android:id="@+id/sci_fi_voyager_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="10"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/sci_fi_voyager_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Read 10 sci-fi books"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mystery Solver Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Mystery Solver"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Mystery Solver -->
                    <ProgressBar
                        android:id="@+id/mystery_solver_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="0"
                        android:progress="10" />

                    <TextView
                        android:id="@+id/mystery_solver_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Solve 10 mysteries"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Romance Enthusiast Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                cardview:cardCornerRadius="8dp"
                cardview:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Hopeless romantic"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Romance Enthusiast -->
                    <ProgressBar
                        android:id="@+id/romance_enthusiast_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:max="10"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/romance_enthusiast_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:text="Read 10 romance books"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>
