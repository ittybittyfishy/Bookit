<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AchievementsFragment"
    android:padding="16dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center_horizontal">

<!-- Level Icon -->
<ImageView
    android:id="@+id/level_icon"
    android:layout_width="140dp"
    android:layout_height="110dp"
    android:src="@drawable/star"
    android:layout_gravity="center"
    android:layout_marginTop="30dp" />

<!-- XP Range TextView -->
<TextView
    android:id="@+id/xp_range_text_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0 to 100 XP"
    android:textSize="14sp"
    android:textColor="#616161"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="16dp" />


<!-- Level Number -->
<TextView
    android:id="@+id/level_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Level 0"
    android:textColor="#FFA000"
    android:textStyle="bold"
    android:textSize="30sp"
    android:layout_gravity="center" />

<!-- XP Progress Bar and Text -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <!-- Current XP TextView -->
    <TextView
        android:id="@+id/currentXpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 XP"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginEnd="8dp" />

    <!-- XP Progress Bar -->
    <ProgressBar
        android:id="@+id/xpProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:progress="0"
        android:max="100" />

    <!-- XP Needed TextView -->
    <TextView
        android:id="@+id/xpNeededTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 XP"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginStart="8dp" />

</LinearLayout>

<!-- Level Progress Description -->
<TextView
    android:id="@+id/level_progress_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="x more books to level x"
    android:textSize="14sp"
    android:textColor="#616161"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="16dp" />

<!-- Achievements Label -->
<TextView
    android:id="@+id/achievements_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Achievements"
    android:textSize="24sp"
    android:textColor="#4CAF50"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center_horizontal"
    android:textStyle="bold" />

<!-- Achievements Grid -->
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="8dp"
    android:alignmentMode="alignMargins"
    android:rowOrderPreserved="false">

    <!-- Book Nooker Achievement (Already Unlocked) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/book_nooker_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/achievement_card_unlocked"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/book_nooker_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/newbie"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/book_nooker_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Nooker"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/book_nooker_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Book Nook!"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:gravity="center" />

        <!-- ProgressBar with Achievement Unlocked Color -->
        <ProgressBar
            android:id="@+id/book_nooker_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1"
            android:progress="1"
            android:progressTint="@color/achievement_unlocked_color" />

        <!-- Progress Description Text -->
        <TextView
            android:id="@+id/book_nooker_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed!"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:gravity="center" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

