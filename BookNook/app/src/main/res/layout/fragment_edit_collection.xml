<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp"
    android:background="@color/app_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Collection"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green_to_purple"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Collection Name"
        android:textColorHint="@color/hint_text_color"
        android:background="@drawable/rounded_rectangle"/>

    <EditText
        android:id="@+id/summaryEdit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Collection Summary"
        android:textColorHint="@color/hint_text_color"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Edits"
        android:textColor="@color/icon_color"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/banner_green"/>

    <Button
        android:id="@+id/removeCollection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/transparent"
        android:text="Delete Collection"
        android:textStyle="italic"
        android:textColor="@color/banner_green"
        android:layout_marginTop="16dp"/>

</LinearLayout>