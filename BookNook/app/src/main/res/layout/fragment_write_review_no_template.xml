<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/submitReviewButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView for Book Info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bookInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="#CCFFCC">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bookImage"
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/authors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Author(s):"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/bookAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/authors"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Lauren Oliver"
                        android:textColor="#A7CCAF"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/bookRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookAuthor"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/bookImage"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:rating="3.9" />

                    <TextView
                        android:id="@+id/bookRatingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/bookRating"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Rating"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Rating Section -->
            <TextView
                android:id="@+id/myRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Rating"
                android:textSize="16sp"
                android:textColor="@color/green_to_purple"
                android:layout_marginTop="16dp" />

            <RatingBar
                android:id="@+id/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/openSubRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="open sub ratings"
                android:textColor="@color/green_to_purple"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />

            <!-- Review Template Button -->
            <Button
                android:id="@+id/useTemplateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use Review template"
                android:background="@drawable/circle_shape"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:textColor="@color/home_pink"
                android:textSize="14sp" />

            <!-- Review Input Box -->
            <EditText
                android:id="@+id/reviewInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:hint="Write a review...."
                android:background="@drawable/rounded_rectangle_1"
                android:padding="12dp"
                android:textColor="@color/green_to_purple"
                android:gravity="top"
                android:textSize="14sp" />

            <!-- Checkbox Options -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/spoilerCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My review has spoilers"
                    android:textColor="@color/black"/>

                <CheckBox
                    android:id="@+id/sensitiveTopicsCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My review has sensitive topics"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Submit Review Button at the bottom -->
    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Review"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:textColor="@color/home_pink"
        android:background="@drawable/circle_shape"
        android:textSize="16sp" />

</RelativeLayout>