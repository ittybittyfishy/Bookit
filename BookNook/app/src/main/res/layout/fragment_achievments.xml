<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AchievmentsFragment"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/level_icon"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/star"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <!-- Dynamically updated level number -->
        <TextView
            android:id="@+id/level_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 80"
            android:textColor="#FFA000"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_gravity="center" />


        <!-- Progress bar will be implemented later -->
        <ProgressBar
            android:id="@+id/level_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:progress="75"
            android:max="100"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/level_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 more books to lvl 81"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Achievements Title -->
        <TextView
            android:id="@+id/achievements_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Achievements"
            android:textSize="24sp"
            android:textColor="#4CAF50"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

        <!-- Achievements Section -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:padding="8dp">

            <!-- Book Annihilator Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Annihilator"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Annihilator -->
                    <ProgressBar
                        android:id="@+id/book_annihilator_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="50"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/book_annihilator_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read 1000 books"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book God Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book God"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book God -->
                    <ProgressBar
                        android:id="@+id/book_god_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="25"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/book_god_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read 5000 books"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Day Dreamer Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Dreamer"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Day Dreamer -->
                    <ProgressBar
                        android:id="@+id/day_dreamer_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="75"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/day_dreamer_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read 10 fantasy books"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thrill Seeker Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thrill Seeker"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Thrill Seeker -->
                    <ProgressBar
                        android:id="@+id/thrill_seeker_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="60"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/thrill_seeker_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read 50 sci-fi books"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Newbie Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Newbie"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Newbie -->
                    <ProgressBar
                        android:id="@+id/newbie_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="100"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/newbie_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create an account"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book Destroyer Achievement -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_gravity="center"
                cardview:cardElevation="4dp"
                cardview:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Destroyer"
                        android:textColor="#212121"
                        android:textStyle="bold" />

                    <!-- ProgressBar for Book Destroyer -->
                    <ProgressBar
                        android:id="@+id/book_destroyer_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:progress="85"
                        android:max="100"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/book_destroyer_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Read 100 books"
                        android:textSize="12sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </LinearLayout>

</ScrollView>
