<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Group"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"
        android:textColor="@color/banner_green"/>

    <EditText
        android:id="@+id/groupName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Group Name" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fillViewport="true">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp">

            <!-- Chips for genres using CustomChipStyle -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_action"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Action" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adult"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Adult" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adventure"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Adventure" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_children"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Children" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_comedy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Comedy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_crime"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Crime" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_drama"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Drama" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fantasy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Fantasy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Fiction" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_historical"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Historical" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_horror"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Horror" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_lgbtq"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="LGBTQ+" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_manga"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Manga" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_comic_books"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Comic Books" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_mature"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Mature" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_mystery"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Mystery" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_nonfiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Nonfiction" />

