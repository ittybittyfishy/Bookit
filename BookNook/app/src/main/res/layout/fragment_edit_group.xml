                android:text="Supernatural" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_suspense"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Suspense" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_thriller"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Thriller" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tragedy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Tragedy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_non_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Non Fiction" />

        </com.google.android.material.chip.ChipGroup>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/privateToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make group private"
            android:textColor="@color/star_green"
            android:buttonTint="@color/tag_background" />

        <!-- Allow user to upload an image -->
        <Button
            android:id="@+id/uploadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Image"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/star_green"/>

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Selected Group Image"
            android:background="@drawable/mr_blobby" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/banner_green"/>

        <Button
            android:id="@+id/confirmGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/banner_green"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparent"
        android:text="Delete Group"
        android:textColor="@color/home_pink"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

</LinearLayout>