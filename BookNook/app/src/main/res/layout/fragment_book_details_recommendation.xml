<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Title"
                android:textColor="@color/star_green"
                android:textSize="25dp"
                android:gravity="center"
                android:maxLines="5"
                android:ellipsize="end"/>
        </RelativeLayout>

        <!-- Book Details Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <!-- Book Image -->
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="131dp"
                android:layout_height="190dp"
                android:layout_marginStart="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Author(s) Text -->
                <TextView
                    android:id="@+id/authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:text="Author(s):"
                    android:textSize="16sp" />

                <!-- Book Authors -->
                <TextView
                    android:id="@+id/bookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="150dp"
                    android:text="Unknown Author"
                    android:textColor="@color/banner_green"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Book Rating Bar -->
                    <RatingBar
                        android:id="@+id/bookRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="4dp" />

                    <!-- Book Rating Number -->
                    <TextView
                        android:id="@+id/ratingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_alignBaseline="@id/bookRating"
                        android:layout_alignParentEnd="true"
                        android:text="N/A"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_toEndOf="@id/bookRating" />
                </RelativeLayout>

                <!-- Veronica Nguyen -->
                <!-- Select Book Button -->
                <Button
                    android:id="@+id/selectBookButton"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="150dp"
                    android:text="Select Book"
                    android:backgroundTint="@color/light_green"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Book Description -->
        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="No description available"
            android:textSize="16sp"
            android:maxLines="6"
            android:ellipsize="end" />

        <!-- Read more button -->
        <Button
            android:id="@+id/readMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="Read More"
            android:textSize="14sp"
            android:textColor="@color/banner_green"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tags" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Reading Status Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/readingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No status"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Divider Line -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#ddd5c6" />

            <!-- My Rating Section -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My rating"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Rating Bar and Rating Number -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/myRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5" />

                    <!-- Rating Number -->
                    <TextView
                        android:id="@+id/myRatingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="N/A"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Date Logged -->
                <TextView
                    android:id="@+id/ratingLoggedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You haven't rated this book"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="#ddd5c6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <!-- Personal Summary Section Title -->
            <TextView
                android:id="@+id/personal_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Personal Summary"
                android:textSize="20sp"
                android:textColor="@color/green_to_purple" />

            <ImageButton
                android:id="@+id/edit_summary_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-3dp"
                android:backgroundTint="@color/transparent"
                app:tint="@color/banner_green"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />
        </RelativeLayout>

        <!-- Text for personal summary -->

        <!-- Buttons -->
        <EditText
            android:id="@+id/personal_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_req_border"
            android:elevation="4dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="top"
            android:hint="Anything you want to remember about this book?"
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:minLines="5"
            android:overScrollMode="ifContentScrolls"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textColor="@color/review_button_text"
            android:textColorHint="@color/review_button_text"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp">

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/save_changes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="15dp"
                android:text="Save Changes"
                android:textSize="14sp"
                android:textColor="@color/banner_green"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:visibility="gone"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/save_changes_button"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:textColor="@color/banner_green"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <!-- Yunjong Noh -->
        <!-- RecycleView for "Comment & Reply" -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
</ScrollView>