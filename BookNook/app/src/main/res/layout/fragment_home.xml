<!-- FrameLayout for orange rectangle and text -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <!-- FrameLayout for orange rectangle and text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp">

        <!-- Orange rectangle with rounded corners -->
        <View
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_orange_rectangle"
            android:backgroundTint="@color/banner_green"
            android:layout_gravity="center_horizontal" />

        <!-- TextView on top of orange rectangle -->
        <TextView
            android:id="@+id/loggedInTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back Costume Party!"
            android:textSize="20sp"
            android:padding="0dp"
            android:gravity="center"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/sub_text_brown"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- Title for recommendations -->
    <TextView
        android:id="@+id/dailyRecommendationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Recommendations"
        android:textColor="@color/home_pink"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="54dp" />
    <!-- Yunjong Noh -->
    <!-- XML for Personal recommendation -->
    <!-- Horizontal LinearLayout for Book Recommendations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:padding="8dp">

        <!-- Book 1 -->
        <LinearLayout
            android:id="@+id/bookItem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Book cover Image -->
            <ImageView
                android:id="@+id/bookCoverImageView1"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:src="@drawable/placeholder_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Title of Book -->
            <TextView
                android:id="@+id/bookTitleTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Yellow Wall-Paper"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Author's name -->
            <TextView
                android:id="@+id/bookAuthorsTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Charlotte Perkins Gilman" />

            <!-- Rating Bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <!-- Rating Bar -->
                <RatingBar
                    android:id="@+id/bookRating1"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.1" />

                <!-- Rating Number -->
                <TextView
                    android:id="@+id/ratingNumber1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4.1)"
                    android:textColor="@color/main_text_brown"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Number of Ratings -->
            <TextView
                android:id="@+id/ratingsCountTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201,593 ratings"
                android:textSize="12sp"
                android:textColor="@color/main_text_brown" />
        </LinearLayout>

        <!-- Book 2 -->
        <LinearLayout
            android:id="@+id/bookItem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Book cover Image -->
            <ImageView
                android:id="@+id/bookCoverImageView2"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:src="@drawable/placeholder_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Title of Book -->
            <TextView
                android:id="@+id/bookTitleTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Ballad of Black Tom"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Author's name -->
            <TextView
                android:id="@+id/bookAuthorsTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Victor LaValle" />

            <!-- Rating Bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <!-- Rating Bar -->
                <RatingBar
                    android:id="@+id/bookRating2"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="3.86" />

                <!-- Rating Number -->
                <TextView
                    android:id="@+id/ratingNumber2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(3.86)"
                    android:textColor="@color/main_text_brown"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Number of Ratings -->
            <TextView
                android:id="@+id/ratingsCountTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28,323 ratings"
                android:textSize="12sp"
                android:textColor="@color/main_text_brown" />
        </LinearLayout>

        <!-- Book 3 -->
        <LinearLayout
            android:id="@+id/bookItem3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Book cover Image -->
            <ImageView
                android:id="@+id/bookCoverImageView3"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:src="@drawable/placeholder_image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <!-- Title of Book -->
            <TextView
                android:id="@+id/bookTitleTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House of Leaves"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Author's name -->
            <TextView
                android:id="@+id/bookAuthorsTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Z. Danielewski" />

            <!-- Rating Bar -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="4dp">

                <!-- Rating Bar -->
                <RatingBar
                    android:id="@+id/bookRating3"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:rating="4.09" />

                <!-- Rating Number -->
                <TextView
                    android:id="@+id/ratingNumber3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4.09)"
                    android:textColor="@color/main_text_brown"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <!-- Number of Ratings -->
            <TextView
                android:id="@+id/ratingsCountTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="170,053 ratings"
                android:textSize="12sp"
                android:textColor="@color/main_text_brown" />
        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginTop="355dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/main_text_brown" />

    <!-- While You Were Away Section -->
    <TextView
        android:id="@+id/recentActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="While you were away..."
        android:textColor="@color/home_pink"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="360dp" />
</FrameLayout>
