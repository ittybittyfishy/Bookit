<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup_background"
    android:padding="16dp">

    <TextView
        android:id="@+id/sort_by_high_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Rating: High to Low"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />

    <TextView
        android:id="@+id/sort_by_low_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Rating: Low to High"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />

    <TextView
        android:id="@+id/sort_by_rating_az"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Title: A to Z"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />

    <TextView
        android:id="@+id/sort_by_rating_za"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Title: Z to A"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />

    <TextView
        android:id="@+id/sort_by_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Author: A to Z"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true" />
</LinearLayout>
