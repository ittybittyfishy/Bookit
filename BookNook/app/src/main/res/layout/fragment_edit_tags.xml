<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Tags"
        android:layout_gravity="center_horizontal"
        android:textSize="35dp"
        android:textColor="@color/banner_green"/>

    <EditText
        android:id="@+id/tag1EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Tag 1" />

    <EditText
        android:id="@+id/tag2EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Tag 2" />

    <EditText
        android:id="@+id/tag3EditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Tag 3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelTagsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/banner_green"/>

        <Button
            android:id="@+id/confirmTagsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/banner_green"/>
    </LinearLayout>

</LinearLayout>