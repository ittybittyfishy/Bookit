
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/book_card"
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_outline"
            android:contentDescription="@string/book_image"
            android:padding="5dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/book_card"
        android:layout_marginStart="10dp"
        android:paddingTop="20dp"
        android:layout_alignParentTop="true"
        android:text="Book Title"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bookAuthors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookTitle"
        android:layout_toEndOf="@id/book_card"
        android:layout_marginStart="10dp"
        android:text="Author" />

    <RatingBar
        android:id="@+id/bookRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookAuthors"
        android:layout_toEndOf="@id/book_card"
        android:layout_marginStart="9dp"
        android:numStars="5"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_marginTop="4dp"
        style="@style/Widget.AppCompat.RatingBar.Small" />

    <TextView
        android:id="@+id/bookGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookRating"
        android:layout_toEndOf="@id/book_card"
        android:layout_marginStart="10dp"
        android:text="Genres"
        android:layout_marginTop="4dp" />

    <Spinner
        android:id="@+id/spinnerSelectCollection"
        android:layout_width="181dp"
        android:layout_height="51dp"
        android:layout_below="@id/bookGenres"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/book_card" />

    <Button
        android:id="@+id/btnAddToCustomCollection"
        android:contentDescription="Put book in custom collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSelectCollection"
        android:layout_toEndOf="@id/book_card"
        android:layout_marginStart="10dp"
        android:padding="4dp"
        android:text="Add to Custom Collection"
        android:textStyle="italic"
        android:textColor="@color/banner_green"
        android:backgroundTint="@color/transparent"/>
</RelativeLayout>