<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginTop="1dp">

    <!-- FrameLayout for orange rectangle and text -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp">

        <View
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle_4"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/loggedInTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="30sp"
            android:padding="0dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for joining Book Nook! To finish setting up your profile, go ahead and select your preferred genres!"
        android:textSize="20sp"
        android:textColor="@color/review_button_text"
        android:gravity="center"
        android:textAlignment="center" android:layout_gravity="center_horizontal" android:layout_marginTop="15dp" android:layout_marginBottom="10dp" />


    <!-- This ScrollView will take up the remaining space -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:singleLine="false"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="8dp">

            <!-- Chips for genres using CustomChipStyle -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_action"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Action" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adult"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Adult" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_adventure"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Adventure" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_children"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Children" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_comedy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Comedy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_crime"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Crime" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_drama"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Drama" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fantasy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Fantasy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Fiction" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_historical"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Historical" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_horror"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Horror" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_lgbtq"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="LGBTQ+" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_manga"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Manga" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_comic_books"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Comic Books" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_mature"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Mature" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_mystery"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Mystery" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_nonfiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Nonfiction" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_poetry"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Poetry" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_psychological"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Psychological" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_romance"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Romance" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_school_life"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="School Life" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_juvenile_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Juvenile Fiction" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_science"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Science" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_science_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Science Fiction" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_biography"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Biography" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sports"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Sports" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_supernatural"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Supernatural" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_suspense"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Suspense" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_thriller"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Thriller" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tragedy"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Tragedy" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_non_fiction"
                style="@style/CustomChipStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Non Fiction" />

        </com.google.android.material.chip.ChipGroup>
    </ScrollView>

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save preferences"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#b29ab5"
        android:textColor="@color/white"/>
</LinearLayout>
