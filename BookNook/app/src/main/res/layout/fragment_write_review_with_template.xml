<!-- Yunjong Noh -->
<!-- Design XML for review with template  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView for Book Info (image, title, author name, rating, etc.) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bookInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/review_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Book Image -->
                    <ImageView
                        android:id="@+id/bookImage"
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:scaleType="fitCenter" />

                    <!-- Book Title -->
                    <TextView
                        android:id="@+id/bookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Before I Fall"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/star_green"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Author Label -->
                    <TextView
                        android:id="@+id/authors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/bookTitle"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Author(s):"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <!-- Book Author -->
                    <TextView
                        android:id="@+id/bookAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_below="@id/authors"
                        android:layout_toEndOf="@id/bookImage"
                        android:textColor="@color/review_card_author_text"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:maxWidth="150dp"
                        android:textSize="16sp" />

                    <!-- Book Rating -->
                    <RatingBar
                        android:id="@+id/bookRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookAuthor"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@id/bookImage"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green" />

                    <!-- Rating Number -->
                    <TextView
                        android:id="@+id/ratingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@id/bookRating"
                        android:layout_alignBottom="@id/bookRating"
                        android:text="(3.9)"
                        android:textSize="16sp"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Rating Section -->
            <TextView
                android:id="@+id/myRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Rating"
                android:layout_gravity="center_horizontal"
                android:textSize="21sp"
                android:textColor="@color/green_to_purple"
                android:layout_marginTop="16dp" />

            <!-- User Rating Bar -->
            <RatingBar
                android:id="@+id/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/star_green"
                android:secondaryProgressTint="@color/star_green"
                android:scaleX="0.7"
                android:scaleY="0.7" />

            <!-- Review Input Box -->

            <!-- Remove Review Template Button -->
            <EditText
                android:id="@+id/reviewInput"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_rectangle_1"
                android:gravity="top"
                android:hint="Write a review...."
                android:padding="12dp"
                android:textColor="@color/review_button_text"
                android:textColorHint="@color/review_button_text"
                android:textSize="14sp" />

            <Button
                android:id="@+id/removeTemplateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="-65dp"
                android:layout_marginBottom="-15dp"
                android:backgroundTint="@color/button_review_template"
                android:textColor="@color/review_button_text"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="Remove Review template"
                android:textSize="23sp"
                android:layout_gravity="start" />

                <!-- Sub-Ratings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    android:padding="3dp">

                    <!-- First Row: Checkbox, RatingBar, Rating Value -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="-20dp"
                        android:gravity="center_vertical">

                        <!-- Checkbox -->
                        <CheckBox
                            android:id="@+id/charactersCheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Characters"
                            android:textColor="@color/button_review_template"
                            android:textSize="16sp"
                            android:layout_marginEnd="8dp" />

                        <!-- Rating Bar -->
                        <RatingBar
                            android:id="@+id/charactersRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:progressTint="@color/star_green"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:secondaryProgressTint="@color/star_green"
                            android:stepSize="0.5"
                            android:layout_marginStart="-1dp" />

                    </LinearLayout>

                    <!-- Second Row: EditText for Review Input -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/input1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_rectangle_1"
                            android:gravity="top"
                            android:hint="Write a review...."
                            android:padding="12dp"
                            android:textColorHint="@color/review_button_text"
                            android:textColor="@color/review_button_text"
                            android:textSize="14sp" />
                    </LinearLayout>

                    </LinearLayout>


                <!-- Sub-Rating: Writing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-20dp">

                    <CheckBox
                        android:id="@+id/writingCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />


                    <RatingBar
                        android:id="@+id/writingRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/star_green"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:secondaryProgressTint="@color/star_green"
                        android:stepSize="0.5"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>

                <!-- Second Row: EditText for Review Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_1"
                        android:gravity="top"
                        android:hint="Write a review...."
                        android:padding="12dp"
                        android:textColorHint="@color/review_button_text"
                        android:textColor="@color/review_button_text"
                        android:textSize="14sp" />
                </LinearLayout>


                <!-- Sub-Rating: Plot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-20dp">

                    <CheckBox
                        android:id="@+id/plotCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <RatingBar
                        android:id="@+id/plotRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/star_green"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:secondaryProgressTint="@color/star_green"
                        android:stepSize="0.5"
                        android:layout_marginStart="53dp"/>
                </LinearLayout>

                <!-- Second Row: EditText for Review Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_1"
                        android:gravity="top"
                        android:hint="Write a review...."
                        android:padding="12dp"
                        android:textColorHint="@color/review_button_text"
                        android:textColor="@color/review_button_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Sub-Rating: Themes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-20dp">

                    <CheckBox
                        android:id="@+id/themesCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Themes"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <RatingBar
                        android:id="@+id/themesRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/star_green"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:secondaryProgressTint="@color/star_green"
                        android:stepSize="0.5"
                        android:layout_marginStart="25dp"/>
                </LinearLayout>

                <!-- Second Row: EditText for Review Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_1"
                        android:gravity="top"
                        android:hint="Write a review...."
                        android:padding="12dp"
                        android:textColorHint="@color/review_button_text"
                        android:textColor="@color/review_button_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Sub-Rating: Strengths -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-20dp"
                    android:layout_marginTop="8dp">

                    <CheckBox
                        android:id="@+id/strengthsCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strengths"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <RatingBar
                        android:id="@+id/strengthsRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/star_green"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:secondaryProgressTint="@color/star_green"
                        android:stepSize="0.5"
                        android:layout_marginStart="15dp"/>
                </LinearLayout>

                <!-- Second Row: EditText for Review Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/input5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_1"
                        android:gravity="top"
                        android:hint="Write a review...."
                        android:padding="12dp"
                        android:textColorHint="@color/review_button_text"
                        android:textColor="@color/review_button_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Sub-Rating: Weaknesses -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="-50dp">

                    <CheckBox
                        android:id="@+id/weaknessesCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weaknesses"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <RatingBar
                        android:id="@+id/weaknessesRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:progressTint="@color/star_green"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:secondaryProgressTint="@color/star_green"
                        android:stepSize="0.5"
                        android:layout_marginStart="-4dp"/>

                </LinearLayout>

                <!-- Second Row: EditText for Review Input -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="35dp">

                    <EditText
                        android:id="@+id/input6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle_1"
                        android:gravity="top"
                        android:hint="Write a review...."
                        android:padding="12dp"
                        android:textColorHint="@color/review_button_text"
                        android:textColor="@color/review_button_text"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <!-- Submit Review Button at the bottom -->
            <Button
                android:id="@+id/submitReviewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/button_review_template"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:text="Submit Review"
                android:textColor="@color/review_button_text"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>