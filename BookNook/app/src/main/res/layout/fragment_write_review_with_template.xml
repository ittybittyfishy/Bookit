<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CardView for Book Info -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bookInfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/review_card">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Book Cover Image -->
                    <ImageView
                        android:id="@+id/bookImage"
                        android:layout_width="110dp"
                        android:layout_height="140dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop" />

                    <!-- Book Title -->
                    <TextView
                        android:id="@+id/bookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Before I Fall"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/green_to_purple" />

                    <!-- Author Text -->
                    <TextView
                        android:id="@+id/bookAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookTitle"
                        android:layout_toEndOf="@id/bookImage"
                        android:text="Author(s): Lauren Oliver"
                        android:textColor="@color/review_card_author_text"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="16sp" />

                    <!-- Book Rating -->
                    <RatingBar
                        android:id="@+id/bookRating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookAuthor"
                        android:layout_toEndOf="@id/bookImage"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:progressTint="@color/star_green" />

                    <!-- Rating Number -->
                    <TextView
                        android:id="@+id/ratingNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookAuthor"
                        android:layout_toEndOf="@id/bookRating"
                        android:layout_marginStart="8dp"
                        android:text="3.9"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <!-- Total Reviews Text -->
                    <TextView
                        android:id="@+id/reviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bookRating"
                        android:layout_toEndOf="@id/bookImage"
                        android:layout_marginTop="4dp"
                        android:text="4,152,342 ratings"
                        android:textSize="14sp"
                        android:textColor="@color/black" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Rating Section -->
            <TextView
                android:id="@+id/myRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Rating"
                android:layout_gravity="center_horizontal"
                android:textSize="21sp"
                android:textColor="@color/green_to_purple"
                android:layout_marginTop="16dp" />

            <!-- User Rating Bar -->
            <RatingBar
                android:id="@+id/myRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.5"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center_horizontal"
                android:progressTint="@color/star_green"
                android:secondaryProgressTint="@color/star_green"
                android:scaleX="0.7"
                android:scaleY="0.7" />

            <!-- Review Input Box -->
            <EditText
                android:id="@+id/reviewInput"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_rectangle_1"
                android:gravity="top"
                android:hint="Write a review...."
                android:padding="12dp"
                android:textColorHint="@color/review_button_text"
                android:textColor="@color/review_button_text"
                android:textSize="14sp" />

            <!-- Remove Review Template Button -->
            <Button
                android:id="@+id/removeTemplateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_review_template"
                android:textColor="@color/review_button_text"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="Remove Review template"
                android:textSize="16sp"
                android:layout_gravity="start" />

            <!-- Sub-Ratings Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Sub-Rating: Characters -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/charactersCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Characters"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/charactersRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/charactersRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Sub-Rating: Writing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/writingCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/writingRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/writingRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Sub-Rating: Plot -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/plotCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plot"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/plotRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/plotRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Sub-Rating: Themes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/themesCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Themes"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/themesRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/themesRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Sub-Rating: Strengths -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/strengthsCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Strengths"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/strengthsRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/strengthsRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Sub-Rating: Weaknesses -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <CheckBox
                        android:id="@+id/weaknessesCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weaknesses"
                        android:textColor="@color/button_review_template"
                        android:textSize="16sp" />

                    <RatingBar
                        android:id="@+id/weaknessesRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:progressTint="@color/star_green"
                        android:secondaryProgressTint="@color/star_green"
                        android:layout_gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/weaknessesRatingValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(0.0)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>
            <!-- Submit Review Button at the bottom -->
            <Button
                android:id="@+id/submitReviewButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/button_review_template"
                android:scaleX="0.85"
                android:scaleY="0.85"
                android:text="Submit Review"
                android:textColor="@color/review_button_text"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>