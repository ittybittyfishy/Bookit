<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Book Details Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <!-- Book Image -->
            <ImageView
                android:id="@+id/bookImage"
                android:layout_width="170dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/star_green"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:maxLines="5"
                android:textStyle="bold"
                android:ellipsize="end"/>

                <!-- Author(s) Text -->
                <TextView
                    android:id="@+id/authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Author(s):"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>

                <!-- Book Authors -->
                <TextView
                    android:id="@+id/bookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unknown Author"
                    android:textColor="@color/banner_green"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp">
        <!-- Book Rating Bar -->
        <RatingBar
            android:id="@+id/bookRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_marginTop="3dp"/>

        <!-- Book Rating Number -->
        <TextView
            android:id="@+id/ratingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_toEndOf="@id/bookRating"
            android:layout_marginStart="10dp"/>
        </LinearLayout>


        <!-- Book Description -->
        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="#ddd5c6" />

        <!-- Description Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/green_to_purple" />

        <TextView
            android:id="@+id/bookDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="No description available"
            android:textSize="16sp"
            android:maxLines="6"
            android:ellipsize="end" />

        <!-- Read more button -->
        <Button
            android:id="@+id/readMoreButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="Read More"
            android:textSize="14sp"
            android:textColor="@color/banner_green"
            android:background="@android:color/transparent"
            android:padding="0dp" />

        <!--Tag container-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Genres"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/green_to_purple" />

        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
        </LinearLayout>

        <!-- Collectons -->
        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="#ddd5c6"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading Status: "
                android:textStyle="bold"
                android:textColor="@color/star_green"/>

            <TextView
                android:id="@+id/readingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not in a collection"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Spinner
                android:id="@+id/spinnerSelectCollection"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/spinner_rectangle"
                android:popupBackground="@color/custom_tag_pink"/>

            <Button
                android:id="@+id/btnAddToCustomCollection"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Add to Custom Collection"
                style="@style/CustomButton"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>


        <!--Personal Summary-->

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:background="#ddd5c6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your rating:"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/star_green"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></LinearLayout>
        <!-- Book Rating Bar -->
        <RatingBar
            android:id="@+id/personalBookRating"
            style="@style/Widget.AppCompat.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:progressTint="@color/star_green"/>

        <!-- Book Rating Number -->
        <TextView
            android:id="@+id/personalRatingNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="N/A"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_toEndOf="@id/bookRating" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Personal Summary Section Title -->
            <TextView
                android:id="@+id/personal_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Personal Summary"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/green_to_purple" />

            <ImageButton
                android:id="@+id/edit_summary_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-3dp"
                android:backgroundTint="@color/transparent"
                app:tint="@color/banner_green"
                android:scaleType="fitCenter"
                android:src="@drawable/edit" />
        </RelativeLayout>


        <!-- Text for personal summary -->
        <EditText
            android:id="@+id/personal_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_req_border"
            android:gravity="top"
            android:hint="Anything you want to remember about this book?"
            android:textColorHint="@color/review_button_text"
            android:elevation="4dp"
            android:padding="12dp"
            android:textColor="@color/review_button_text"
            android:textSize="14sp"
            android:minLines="5"
            android:maxLines="10"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"
            android:overScrollMode="ifContentScrolls"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <!-- Buttons -->
        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp">

            <!-- Save Changes Button -->
            <Button
                android:id="@+id/save_changes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="15dp"
                android:text="Save Changes"
                android:textSize="14sp"
                android:textColor="@color/banner_green"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:visibility="gone"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/save_changes_button"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:text="Cancel"
                android:textSize="14sp"
                android:textColor="@color/banner_green"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:visibility="gone"/>
        </RelativeLayout>
        
        <!--Book Recommendations-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Readers also suggest..."
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/green_to_purple"
                android:layout_weight="1"/>
            
            <ImageButton
                android:id="@+id/addRecommendationButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                app:tint="@color/star_green"
                android:background="@color/transparent"
                android:layout_weight="0"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendationsRecyclerView"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
            
        <!-- Yunjong Noh -->
        <!-- User Review Section Title -->
        <TextView
            android:id="@+id/userReviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Review"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:textColor="@color/green_to_purple"
            android:layout_gravity="center_horizontal" />

        <!-- Write Review Button -->
        <Button
            android:id="@+id/write_review_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:text="Write a Review"
            android:backgroundTint="@color/green_to_purple"
            android:textSize="14sp"/>


        <!-- Yunjong Noh -->
        <!-- RecycleView for "Comment & Reply" -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>