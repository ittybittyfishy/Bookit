<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <!-- Book Image (initially hidden) -->
    <ImageView
        android:id="@+id/bookImage"
        android:src="@drawable/placeholder_image"
        android:layout_width="220dp"
        android:layout_height="310dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="Book Image" />

    <!-- Book Title text -->
    <TextView
        android:id="@+id/bookTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#8B845E"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />

    <!-- Book Authors text -->
    <TextView
        android:id="@+id/bookAuthorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authors"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#8B845E"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp">

        <!-- Change Book Button Button -->
        <Button
            android:id="@+id/changeBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Book"
            android:textColor="#8B845E"
            android:backgroundTint="#D3E3CE"
            android:layout_marginEnd="20dp"/>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirmBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Book"
            android:textColor="#8B845E"
            android:backgroundTint="#D3E3CE" />

    </LinearLayout>
</LinearLayout>
