<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context=".Register">

    <!-- create account  -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text = "Create Account"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/sub_text_brown"
        android:textSize="40dp"
        android:textAlignment="center"/>

    <!-- terms of service -->
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text = "By creating an account you agree to the Book
Book Nook Terms of Service and Conditions"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:textColor="@color/sub_text_brown"
        android:textAlignment="center"/>

    <!-- dividers -->
    <View
        android:id="@+id/divider1"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginTop="542dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/main_text_brown" />
    <View
        android:id="@+id/divider2"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginTop="542dp"
        android:layout_marginStart="290dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/main_text_brown" />

    <!-- Have Account -->
    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="532dp"
        android:text="Already have an account?"
        android:textColor="@color/sub_text_brown" />

    <!-- Border -->

    <View
        android:id="@+id/border"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="395:646"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- username -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="5dp"
        android:hint="Username"
        android:padding="15dp"
        android:textColor="@color/sub_text_brown" />

    <!-- email -->
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailEditText"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_marginTop="170dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_rectangle"
        android:elevation="5dp"
        android:hint="Email"
        android:padding="15dp"
        android:textColor="@color/sub_text_brown" />

    <!-- password -->

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordEditText"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="5dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/sub_text_brown" />

    <!-- confirm password -->

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirmPassword"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="310dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="5dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/sub_text_brown" />

    <!-- registerButton -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="199dp"
        android:layout_height="68dp"
        android:layout_marginTop="380dp"
        android:backgroundTint="@color/border_green"
        android:layout_gravity="center_horizontal"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <!-- To login -->
    <Button
        android:id="@+id/toLogin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="550dp"
        android:backgroundTint="@color/transparent"
        android:text="Login"
        android:textColor="@color/banner_green"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

</FrameLayout>
